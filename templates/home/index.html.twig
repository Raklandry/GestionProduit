{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block header %}{% endblock %}

{% block body %}
    {% if produits|length %}
        <div class="row">
            {% for produit in produits %}
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-content-top py-2">
                            <h5 class="card-title">{{ produit.titre }}</h5>
                        </div>
                        <div class="card-body d-flex flex-wrap justify-content-between align-items-center">
                            <span class="small card-text d-block">{{produit.description | length > 70 ? produit.description | slice(0, 70) ~ '...' : produit.description }}</span>
                            <div class="d-flex justify-content-between align-items-center flex-wrap w-100">
                                <div class="card-descript py-2">
                                    <span><b>Marque : </b> {{ produit.marque }}</span>
                                    <span><b>Types : </b> {{ produit.types }}</span>
                                    <span><b>Genre : </b> {{ produit.genre }}</span>
                                </div>
                                <h5 class="card-title text-end text-warning">{{ produit.prixTtc }} Ar</h5>
                            </div>
                            <a href="{{ path('add_cart', {id:produit.id}) }}" class="btn btn-primary btn-sm mt-2 ">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <h3>Aucun produit</h3>
        <div class="alert-message ">
            <div class="alert alert-warning alert-dismissible fade show mt-2" role="alert">
                <strong>Initialisation nécessaire</strong>
                <p>L'application doit fonctionner en lançant la commande de création de schéma de la BDD.</p>
                <p>Cela doit être initialisé via les fixtures</p>
            </div>
        </div>
    {% endif %}
{% endblock %}
